# Discord
DISCORD_TOKEN=

# AzerothCore SOAP (worldserver must have SOAP enabled)
SOAP_HOST=127.0.0.1
SOAP_PORT=7878
SOAP_USER=
SOAP_PASS=

# Optional: restrict bot to a specific guild/channel
ALLOWED_GUILD_ID=0
ALLOWED_CHANNEL_ID=0

# Presence refresh
STATUS_POLL_SECONDS=30

# Knowledge base and docs
SERVER_INFO_FILE=server_info.json
KB_FILE=kb.json
DOCS_DIR=docs

# LLM provider (ollama or arliai)
LLM_PROVIDER=ollama
OLLAMA_ENABLED=false
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=llama3

# DB metrics (optional, read-only)
DB_ENABLED=false
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=acbot_ro
DB_PASS=CHANGE_ME
DB_AUTH_DB=auth
DB_CHAR_DB=characters
DB_WORLD_DB=world

